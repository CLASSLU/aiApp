FROM nginx:alpine

WORKDIR /usr/share/nginx/html

# 复制静态文件
COPY . .

# 创建nginx配置
RUN mkdir -p /etc/nginx/conf.d && \
    echo 'server { \n\
    listen 3000; \n\
    server_name localhost; \n\
    location / { \n\
        root /usr/share/nginx/html; \n\
        index index.html; \n\
        try_files $uri $uri/ /index.html; \n\
    } \n\
}' > /etc/nginx/conf.d/default.conf

# 暴露端口
EXPOSE 3000

# 启动nginx
CMD ["nginx", "-g", "daemon off;"] 